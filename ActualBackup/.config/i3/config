mode "HDMI-0" {
	
	bindsym i exec sh -c 'xrandr --output HDMI-0 --mode 1920x1080 --right-of LVDS'; exec sh -c 'feh --randomize --bg-scale /home/michael/Bilder/Desktophintergründe/Space/'; mode "default"
	bindsym o exec sh -c 'xrandr --output HDMI-0 --off'; mode "default"
	
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

mode "VGA-0" {

	bindsym i exec sh -c 'xrandr --output VGA-0 --auto --right-of LVDS'; exec sh -c 'feh --randomize --bg-scale /home/michael/Bilder/Desktophintergründe/Space/'; mode "default"
	bindsym o exec sh -c 'xrandr --output VGA-0 --off'; mode "default"
	
	bindsym Return mode "default"
	bindsym Escape mode "default"

}

mode "CHANGE" {

	bindsym v mode "VOLUME"
	bindsym b mode "BRIGHTNESS"

	bindsym Return mode "default"
	bindsym Escape mode "default"

}

mode "VOLUME" {

	bindsym u exec bash -c 'xdotool key XF86AudioRaiseVolume'
	bindsym d exec bash -c 'xdotool key XF86AudioLowerVolume'

	bindsym Return mode "default"
	bindsym Escape mode "default"

}
mode "BRIGHTNESS" {
	

	bindsym u exec bash -c 'xdotool key XF86MonBrightnessUp'
	bindsym d exec bash -c 'xdotool key XF86MonBrightnessDown'

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+u mode "util"

mode "start" {
	
	bindsym t exec /opt/telegram/telegram
	
	bindsym r exec /opt/reditr/reditr_app

	bindsym f exec env MOZ_USE_XINPUT2=1 firefox
	bindsym c exec chromium-browser

	bindsym i exec intellij-idea-community

	bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+s mode "start"; exec sh -c 'sleep 2 && i3-msg mode "default"' 

